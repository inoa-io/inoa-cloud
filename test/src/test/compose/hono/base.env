QUARKUS_BANNER_ENABLED=false
QUARKUS_LOG_CONSOLE_COLOR=true
QUARKUS_LOG_CATEGORY__IO_MICROMETER__LEVEL=ERROR
QUARKUS_LOG_CATEGORY__ORG_INFINISPAN__LEVEL=ERROR
QUARKUS_LOG_CATEGORY__ORG_APACHE_KAFKA__LEVEL=WARN
QUARKUS_LOG_CATEGORY__ORG_ECLIPSE_HONO_ADAPTER__LEVEL=INFO

HONO_HEALTHCHECK_INSECUREPORTBINDADDRESS=0.0.0.0
HONO_HEALTHCHECK_INSECUREPORT=8088

HONO_VERTX_PREFER_NATIVE=true
HONO_APP_MAXINSTANCES=1

# this is ugly be necessary for quarkus
hono.kafka.commonClientConfig.BOOTSTRAP_SERVERS=kafka:9092
hono_kafka_commonClientConfig_BOOTSTRAP_SERVERS=kafka:9092

HONO_AUTH_HOST=hono-service-auth
HONO_AUTH_PORT=5672
HONO_AUTH_VALIDATION_CERTPATH=/etc/hono/auth-server-cert.pem

HONO_REGISTRATION_HOST=gateway-registry-hono-bridge
HONO_REGISTRATION_PORT=5672
HONO_REGISTRATION_SUPPORTEDSASLMECHANISMS=PLAIN
HONO_REGISTRATION_CREDENTIALSPATH=/etc/hono/credentials
HONO_REGISTRATION_REQUESTTIMEOUT=4000

HONO_TENANT_HOST=gateway-registry-hono-bridge
HONO_TENANT_PORT=5672
HONO_TENANT_SUPPORTEDSASLMECHANISMS=PLAIN
HONO_TENANT_CREDENTIALSPATH=/etc/hono/credentials
HONO_TENANT_REQUESTTIMEOUT=4000

HONO_COMMANDROUTER_HOST=hono-service-command-router
HONO_COMMANDROUTER_PORT=5672
HONO_COMMANDROUTER_SUPPORTEDSASLMECHANISMS=PLAIN
HONO_COMMANDROUTER_CREDENTIALSPATH=/etc/hono/credentials

HONO_CREDENTIALS_HOST=gateway-registry-hono-bridge
HONO_CREDENTIALS_PORT=5672
HONO_CREDENTIALS_SUPPORTEDSASLMECHANISMS=PLAIN
HONO_CREDENTIALS_CREDENTIALSPATH=/etc/hono/credentials
HONO_CREDENTIALS_REQUESTTIMEOUT=4000